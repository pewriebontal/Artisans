@model IEnumerable<Artisans.Models.InfluencerPost>
@{
    ViewData["Title"] = "Inspiration Feed";
}

<div class="container-fluid page-header-container">
    <div class="container">
        <h1 class="page-header-title">Inspiration Feed</h1>
        <p class="page-header-subtitle">Discover local brands and products styled by our community.</p>
    </div>
</div>

<div class="container my-5">
    @if (!Model.Any())
    {
        <div class="text-center p-5">
            <h4>No Posts Yet</h4>
            <p>No posts to display yet. Check back soon for inspiration!</p>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var post in Model)
            {
                <div class="col">
                    <div class="post-card">
                        <img src="@post.ImageUrl" class="post-card-img-top" alt="Influencer post">
                        <div class="post-card-body">
                            @if (!string.IsNullOrEmpty(post.Caption))
                            {
                                <p class="post-card-text">@post.Caption</p>
                            }
                             <p class="post-card-author">
                                Posted by: @post.InfluencerUser.UserName
                            </p>
                            @if (post.Tags.Any())
                            {
                                <div class="post-card-tags">
                                    <strong>Tagged Brands:</strong><br/>
                                    @foreach (var tag in post.Tags)
                                    {
                                        <a asp-controller="Browse" asp-action="ArtisanStore" asp-route-id="@tag.TaggedArtisanProfileId" class="badge bg-light text-dark me-1">
                                            @tag.TaggedArtisanProfile.BrandName
                                        </a>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
