
@model Artisans.Models.CheckoutViewModel
@{
    ViewData["Title"] = "Checkout";
}

<h1>@ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-md-7 order-md-2 mb-4">
        <h4 class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-primary">Your cart</span>
            <span class="badge bg-primary rounded-pill">@Model.CartItems.Sum(item => item.Quantity)</span>
        </h4>
        <ul class="list-group mb-3">
            @foreach (var item in Model.CartItems)
            {
                <li class="list-group-item d-flex justify-content-between lh-sm">
                    <div>
                        <h6 class="my-0">@item.Name</h6>
                        <small class="text-muted">Quantity: @item.Quantity</small>
                    </div>
                    <span class="text-muted">@((item.UnitPrice * item.Quantity).ToString("C"))</span>
                </li>
            }
            <li class="list-group-item d-flex justify-content-between">
                <span>Total (USD)</span>
                <strong>@Model.CartTotal.ToString("C")</strong>
            </li>
        </ul>
    </div>

    <div class="col-md-5 order-md-1">
        <h4 class="mb-3">Shipping address</h4>
        <form asp-action="Checkout" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            @Html.AntiForgeryToken()

            <div class="form-floating mb-3">
                <input asp-for="ShippingAddress" class="form-control" placeholder="1234 Main St" />
                <label asp-for="ShippingAddress"></label>
                <span asp-validation-for="ShippingAddress" class="text-danger"></span>
            </div>

            <div class="row g-3">
                <div class="col-md-7">
                    <div class="form-floating mb-3">
                        <input asp-for="ShippingCity" class="form-control" placeholder="Yangon" />
                        <label asp-for="ShippingCity"></label>
                        <span asp-validation-for="ShippingCity" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="form-floating mb-3">
                        <input asp-for="ShippingPostalCode" class="form-control" placeholder="11011" />
                        <label asp-for="ShippingPostalCode"></label>
                        <span asp-validation-for="ShippingPostalCode" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <hr class="my-4">

            <h4 class="mb-3">Payment (Simulated)</h4>
             <p class="text-muted small">For INFT3050: Use card ending in "0000" for success, "1111" for decline.</p>


            <div class="form-floating mb-3">
                <input asp-for="CardNumber" class="form-control" placeholder="xxxx xxxx xxxx xxxx"/>
                <label asp-for="CardNumber"></label>
                <span asp-validation-for="CardNumber" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="CardExpiry" class="form-control" placeholder="MM/YY"/>
                        <label asp-for="CardExpiry"></label>
                        <span asp-validation-for="CardExpiry" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                     <div class="form-floating mb-3">
                        <input asp-for="CardCvv" class="form-control" placeholder="123"/>
                        <label asp-for="CardCvv"></label>
                        <span asp-validation-for="CardCvv" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <hr class="my-4">
            <button class="w-100 btn btn-primary btn-lg" type="submit">Place Order</button>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}