@model IEnumerable<Artisans.Models.Product>
@{
    ViewData["Title"] = "Browse Products";
    var allCategories = ViewBag.AllCategories as List<Artisans.Models.Category>;
    var selectedCategory = ViewData["SelectedCategory"] as Artisans.Models.Category;
    var searchQuery = ViewData["SearchQuery"] as string;
}

<div class="container-fluid page-header-container">
    <div class="container">
        <h1 class="page-header-title">Our Collection</h1>
        <p class="page-header-subtitle">Discover unique products from Myanmar's talented artisans.</p>
    </div>
</div>

<div class="container mt-5">
    <div class="row">
        <!-- Filters Sidebar -->
        <div class="col-lg-3">
            <div class="filters-sidebar">
                <h5 class="filter-title">Refine Your Search</h5>
                
                <!-- Search Form -->
                <form asp-action="Products" method="get" class="mb-4">
                    <div class="input-group">
                        <input type="text" name="searchQuery" value="@searchQuery" class="form-control" placeholder="Search products...">
                        <button class="btn btn-outline-secondary" type="submit"><i class="fas fa-search"></i></button>
                    </div>
                </form>

                <!-- Category Filter -->
                <h6 class="filter-subtitle">Categories</h6>
                <div class="list-group category-list">
                    <a asp-action="Products" asp-route-searchQuery="@searchQuery" class="list-group-item list-group-item-action @(selectedCategory == null ? "active" : "")">All Categories</a>
                    @if (allCategories != null)
                    {
                        @foreach (var cat in allCategories)
                        {
                            <a asp-action="Products" asp-route-categoryId="@cat.Id" asp-route-searchQuery="@searchQuery" class="list-group-item list-group-item-action @(selectedCategory?.Id == cat.Id ? "active" : "")">
                                @cat.Name
                            </a>
                        }
                    }
                </div>
                
                <a asp-action="Products" class="btn btn-link d-block mt-3">Clear All Filters</a>
            </div>
        </div>

        <!-- Products Grid -->
        <div class="col-lg-9">
            @if (!Model.Any())
            {
                <div class="text-center p-5">
                    <h4>No Products Found</h4>
                    <p>No products found matching your criteria. Try a different search or category!</p>
                    <a asp-action="Products" class="btn btn-primary mt-3">Reset Search</a>
                </div>
            }
            else
            {
                <div class="product-grid">
                    @foreach (var item in Model)
                    {
                        <div class="product-card fade-in-up">
                            <a asp-action="ProductDetails" asp-route-id="@item.Id" class="product-card-link">
                                <img src="@(!string.IsNullOrEmpty(item.MainImageUrl) ? item.MainImageUrl : "/images/products/placeholder.jpg")"
                                     alt="@item.Name"
                                     class="product-image">
                                <div class="product-info">
                                    <h3 class="product-title">@item.Name</h3>
                                    <p class="product-artisan">by @item.ArtisanProfile.BrandName</p>
                                    <div class="product-price">@item.Price.ToString("C")</div>
                                </div>
                            </a>
                            <div class="product-card-footer">
                                <a asp-action="ProductDetails" asp-route-id="@item.Id" class="btn btn-view-product">View Details</a>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>
