@model Artisans.Models.Material

@{
    ViewData["Title"] = Model.Name;
}

<div class="container product-detail-container">
    <div class="row align-items-center">
        <div class="col-lg-7 mb-4 mb-lg-0">
            <img src="@(!string.IsNullOrEmpty(Model.ImageUrl) ? Model.ImageUrl : "/images/materials/placeholder.svg")" 
                 alt="@Model.Name" 
                 class="product-detail-image">
        </div>
        <div class="col-lg-5">
            <h1 class="product-detail-title">@Model.Name</h1>
            <p class="mb-3">
                <a asp-action="ArtisanStore" asp-route-id="@Model.SupplierArtisanProfileId" class="product-detail-artisan-link">
                    Supplied by @Model.SupplierArtisanProfile.BrandName
                </a>
                @if(Model.Category != null) 
                { 
                    <span class="text-muted"> in 
                        <a asp-action="Materials" asp-route-categoryId="@Model.CategoryId" class="product-detail-artisan-link">@Model.Category.Name</a>
                    </span> 
                }
            </p>
            
            <p class="product-detail-description">
                @Html.Raw(Model.Description?.Replace("\n", "<br />"))
            </p>

            <div class="product-detail-price">
                @Model.PricePerUnit.ToString("C") / @Model.UnitOfMeasure
            </div>

            <p class="product-detail-stock @(Model.StockQuantity > 0 ? "" : "out-of-stock")">
                @(Model.StockQuantity > 0 ? $"{Model.StockQuantity} in stock" : "Out of Stock")
            </p>

            <form asp-controller="Orders" asp-action="AddToCart" method="post" class="mt-4">
                <input type="hidden" name="itemId" value="@Model.Id" />
                <input type="hidden" name="itemType" value="Material" />
                <div class="input-group" style="max-width: 400px;">
                    <input type="number" name="quantity" class="form-control text-center" value="1" min="1" max="@Model.StockQuantity">
                    <button type="submit" class="btn btn-add-to-cart" disabled="@(Model.StockQuantity <= 0)">
                        <i class="fas fa-shopping-cart me-2"></i> Add to Cart
                    </button>
                </div>
            </form>

            <a asp-action="Materials" class="btn btn-outline-secondary mt-4">
                <i class="fas fa-arrow-left me-2"></i> Back to Materials
            </a>
        </div>
    </div>
</div>
