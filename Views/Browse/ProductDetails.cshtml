@model Artisans.Models.Product

@{
    ViewData["Title"] = Model.Name;
}

<div class="container product-detail-container">
    <div class="row align-items-center">
        <div class="col-lg-7 mb-4 mb-lg-0">
            <img src="@(!string.IsNullOrEmpty(Model.MainImageUrl) ? Model.MainImageUrl : "/images/products/placeholder.jpg")" 
                 alt="@Model.Name" 
                 class="product-detail-image">
        </div>
        <div class="col-lg-5">
            <h1 class="product-detail-title">@Model.Name</h1>
            <p class="mb-3">
                <a asp-action="ArtisanStore" asp-route-id="@Model.ArtisanProfileId" class="product-detail-artisan-link">
                    by @Model.ArtisanProfile.BrandName
                </a>
                @if(Model.Category != null) 
                { 
                    <span class="text-muted"> in 
                        <a asp-action="Products" asp-route-categoryId="@Model.CategoryId" class="product-detail-artisan-link">@Model.Category.Name</a>
                    </span> 
                }
            </p>
            
            <p class="product-detail-description">
                @Html.Raw(Model.Description.Replace("\n", "<br />"))
            </p>

            <div class="product-detail-price">
                @Model.Price.ToString("C")
            </div>

            <p class="product-detail-stock @(Model.StockQuantity > 0 ? "" : "out-of-stock")">
                @(Model.StockQuantity > 0 ? $"{Model.StockQuantity} available" : "Out of Stock")
            </p>

            <form asp-controller="Orders" asp-action="AddToCart" method="post" class="mt-4">
                <input type="hidden" name="itemId" value="@Model.Id" />
                <input type="hidden" name="itemType" value="Product" />
                <div class="input-group" style="max-width: 400px;">
                    <input type="number" name="quantity" class="form-control text-center" value="1" min="1" max="@Model.StockQuantity">
                    <button type="submit" class="btn btn-add-to-cart" disabled="@(Model.StockQuantity <= 0)">
                        <i class="fas fa-shopping-cart me-2"></i> Add to Cart
                    </button>
                </div>
            </form>

            <a asp-action="Products" class="btn btn-outline-secondary mt-4">
                <i class="fas fa-arrow-left me-2"></i> Back to Collection
            </a>
        </div>
    </div>
</div>

@if (!string.IsNullOrWhiteSpace(Model.StoryDetailsText) || !string.IsNullOrWhiteSpace(Model.ProcessImageUrl1) || !string.IsNullOrWhiteSpace(Model.ProcessImageUrl2))
{
    <div class="journey-of-creation">
        <div class="container">
            <h2 class="journey-title">The Journey of Creation</h2>
            @if (!string.IsNullOrWhiteSpace(Model.StoryDetailsText))
            {
                <p class="text-center lead mb-5" style="max-width: 800px; margin: 0 auto 3rem auto;">
                    @Html.Raw(Model.StoryDetailsText.Replace("\n", "<br />"))
                </p>
            }
            <div class="row mt-3 g-4 align-items-center">
                @if (!string.IsNullOrEmpty(Model.ProcessImageUrl1))
                {
                    <div class="col-md-6">
                         <img src="@Model.ProcessImageUrl1" alt="Process Image 1" class="img-fluid rounded shadow-sm" />
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.ProcessImageUrl2))
                {
                    <div class="col-md-6">
                         <img src="@Model.ProcessImageUrl2" alt="Process Image 2" class="img-fluid rounded shadow-sm" />
                    </div>
                }
            </div>
        </div>
    </div>
}
