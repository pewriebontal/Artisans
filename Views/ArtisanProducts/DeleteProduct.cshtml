@model Artisans.Models.Product 
@{
    ViewData["Title"] = "Delete Product";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 text-center">
            <div class="auth-card">
                <div class="auth-header">
                     <div style="font-size: 4rem; color: #dc3545;">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <h1 class="auth-title mt-3">Confirm Deletion</h1>
                    <p class="auth-subtitle">Are you sure you want to permanently delete this product?</p>
                </div>
                <div class="auth-body">
                    <h4 class="font-primary">"@Html.DisplayFor(model => model.Name)"</h4>
                    <p class="text-muted">This action cannot be undone.</p>
                    
                    <form asp-action="DeleteProduct" asp-route-id="@Model.Id" method="post" class="mt-4">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                        <button type="submit" class="btn btn-danger">Yes, Delete Product</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
