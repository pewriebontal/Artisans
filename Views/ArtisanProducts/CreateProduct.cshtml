@model Artisans.Models.ProductViewModel
@{
    ViewData["Title"] = "Create New Product";
}

<div class="container-fluid page-header-container">
    <div class="container">
        <h1 class="page-header-title">Create a New Product</h1>
        <p class="page-header-subtitle">Add a new creation to your storefront. Tell its story.</p>
    </div>
</div>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <form asp-action="CreateProduct" method="post" class="dashboard-form-card">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                <div class="row">
                    <div class="col-md-8">
                        <h4 class="form-section-title">Product Details</h4>
                        <div class="form-floating mb-3">
                            <input asp-for="Name" class="form-control" placeholder="Product Name" />
                            <label asp-for="Name"></label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <textarea asp-for="Description" class="form-control" placeholder="Description" style="height: 120px;"></textarea>
                            <label asp-for="Description"></label>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <h4 class="form-section-title">Pricing & Stock</h4>
                        <div class="form-floating mb-3">
                            <input asp-for="Price" class="form-control" placeholder="Price" />
                            <label asp-for="Price"></label>
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="StockQuantity" class="form-control" placeholder="Stock Quantity" />
                            <label asp-for="StockQuantity"></label>
                            <span asp-validation-for="StockQuantity" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-8">
                         <div class="form-floating mb-3">
                            <input asp-for="MainImageUrl" class="form-control" placeholder="Main Image URL" />
                            <label asp-for="MainImageUrl"></label>
                            <span asp-validation-for="MainImageUrl" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-floating mb-3">
                            <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories">
                                <option value="">-- Select Category --</option>
                            </select>
                            <label asp-for="CategoryId"></label>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <hr class="my-4" />

                <h4 class="form-section-title">Journey of Creation</h4>
                <div class="form-floating mb-3">
                    <textarea asp-for="StoryDetailsText" class="form-control" placeholder="Tell the story behind this product..." style="height: 150px;"></textarea>
                    <label asp-for="StoryDetailsText"></label>
                    <span asp-validation-for="StoryDetailsText" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="ProcessImageUrl1" class="form-control" placeholder="Process Image URL 1" />
                            <label asp-for="ProcessImageUrl1"></label>
                            <span asp-validation-for="ProcessImageUrl1" class="text-danger"></span>
                        </div>
                    </div>
                     <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="ProcessImageUrl2" class="form-control" placeholder="Process Image URL 2" />
                            <label asp-for="ProcessImageUrl2"></label>
                            <span asp-validation-for="ProcessImageUrl2" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <hr class="my-4" />
                
                <div class="d-flex justify-content-between align-items-center">
                    <div class="form-check form-switch form-check-lg">
                        <input class="form-check-input" type="checkbox" asp-for="IsActive" />
                        <label class="form-check-label" asp-for="IsActive">
                            Make this product active?
                        </label>
                    </div>
                    <div class="form-group">
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary">Create Product</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
