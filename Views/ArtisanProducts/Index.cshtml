@model Artisans.Models.ArtisanDashboardViewModel
@{
    ViewData["Title"] = "My Store Dashboard";
}

<div class="container-fluid page-header-container">
    <div class="container">
        <h1 class="page-header-title">@Model.ArtisanProfile?.BrandName</h1>
        <p class="page-header-subtitle">Your Atelier Dashboard</p>
    </div>
</div>

<div class="container my-5">
    
    @if (!Model.ArtisanProfile?.IsApproved ?? true) 
    {
        <div class="alert alert-warning d-flex align-items-center" role="alert">
            <i class="fas fa-exclamation-triangle me-3" style="font-size: 1.5rem;"></i>
            <div>
                <strong>Profile Pending Approval:</strong> You can manage your items, but they will not be publicly visible until an administrator approves your profile.
            </div>
        </div>
    }
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <!-- Products Section -->
    <div class="dashboard-section">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="dashboard-section-title">My Products</h2>
            <a asp-action="CreateProduct" class="btn btn-primary"><i class="fas fa-plus me-2"></i> Add New Product</a>
        </div>
        <div class="card shadow-sm">
            @if (!Model.Products.Any())
            {
                <div class="card-body text-center p-5">
                    <p class="text-muted">You have not added any products yet.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover table-align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th>Category</th>
                                <th>Price</th>
                                <th>Stock</th>
                                <th>Status</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Products)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                    <td>@(item.Category?.Name ?? "N/A")</td>
                                    <td>@item.Price.ToString("C")</td>
                                    <td>@Html.DisplayFor(modelItem => item.StockQuantity)</td>
                                    <td>
                                        <span class="badge @(item.IsActive ? "bg-success" : "bg-secondary")">
                                            @(item.IsActive ? "Active" : "Inactive")
                                        </span>
                                    </td>
                                    <td class="text-end">
                                        <a asp-action="EditProduct" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                                        <a asp-action="DeleteProduct" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>

    <!-- Materials Section -->
    <div class="dashboard-section mt-5">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="dashboard-section-title">My Materials</h2>
            <a asp-action="CreateMaterial" class="btn btn-primary"><i class="fas fa-plus me-2"></i> Add New Material</a>
        </div>
        <div class="card shadow-sm">
            @if (!Model.Materials.Any())
            {
                <div class="card-body text-center p-5">
                    <p class="text-muted">You have not added any materials yet.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover table-align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th>Price Per Unit</th>
                                <th>Unit</th>
                                <th>Stock</th>
                                <th>Status</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Materials)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                    <td>@item.PricePerUnit.ToString("C")</td>
                                    <td>@Html.DisplayFor(modelItem => item.UnitOfMeasure)</td>
                                    <td>@Html.DisplayFor(modelItem => item.StockQuantity)</td>
                                    <td>
                                        <span class="badge @(item.IsActive ? "bg-success" : "bg-secondary")">
                                            @(item.IsActive ? "Active" : "Inactive")
                                        </span>
                                    </td>
                                    <td class="text-end">
                                        <a asp-action="EditMaterial" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                                        <a asp-action="DeleteMaterial" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
