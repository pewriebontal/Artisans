@model Artisans.Core.Entities.Material
@{
    ViewData["Title"] = "Delete Material";
}

<h2>@ViewData["Title"]</h2>
<h3>Are you sure you want to delete this material?</h3>
<hr />
<div>
    <h4>@Html.DisplayFor(model => model.Name)</h4>
    <dl class="row">
        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

        <dt class="col-sm-3">Price Per Unit</dt>
        <dd class="col-sm-9">@Model.PricePerUnit.ToString("C")</dd>
        
        <dt class="col-sm-3">Unit</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.UnitOfMeasure)</dd>

        <dt class="col-sm-3">Category</dt>
        <dd class="col-sm-9">@(Model.Category?.Name ?? "N/A")</dd>

        <dt class="col-sm-3">Stock</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.StockQuantity)</dd>

        <dt class="col-sm-3">Active</dt>
        <dd class="col-sm-9">@(Model.IsActive ? "Yes" : "No")</dd>
    </dl>
    
    <form asp-action="DeleteMaterial" asp-route-id="@Model.Id" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>