@model Artisans.Core.Entities.Product 
@{
    ViewData["Title"] = "Delete Product";
}

<h2>@ViewData["Title"]</h2>
<h3>Are you sure you want to delete this product?</h3>
<hr />
<div>
    <h4>@Html.DisplayFor(model => model.Name)</h4>
    <dl class="row">
        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

        <dt class="col-sm-3">Price</dt>
        <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

        <dt class="col-sm-3">Category</dt>
        <dd class="col-sm-9">@(Model.Category?.Name ?? "N/A")</dd>

        <dt class="col-sm-3">Stock</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.StockQuantity)</dd>

        <dt class="col-sm-3">Active</dt>
        <dd class="col-sm-9">@(Model.IsActive ? "Yes" : "No")</dd>
        
        @if (!string.IsNullOrEmpty(Model.StoryDetailsText))
        {
            <dt class="col-sm-3">Story</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.StoryDetailsText)</dd>
        }
    </dl>
    
    <form asp-action="DeleteProduct" asp-route-id="@Model.Id" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>