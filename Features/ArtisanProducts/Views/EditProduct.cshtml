@model Artisans.Features.ArtisanProducts.ViewModels.ProductViewModel
@{
    ViewData["Title"] = "Edit Product";
}

<h2>@ViewData["Title"]: @Model.Name</h2>
<h4>Update Product Details & Story</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="EditProduct" asp-route-id="@Model.Id" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" /> @* Important for binding on POST *@

            <div class="form-floating mb-3">
                <input asp-for="Name" class="form-control" />
                <label asp-for="Name"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <label asp-for="Description"></label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="Price" class="form-control" />
                        <label asp-for="Price"></label>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="StockQuantity" class="form-control" />
                        <label asp-for="StockQuantity"></label>
                        <span asp-validation-for="StockQuantity" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-floating mb-3">
                <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories">
                    <option value="">-- Select Category (Optional) --</option>
                </select>
                <label asp-for="CategoryId"></label>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="MainImageUrl" class="form-control" />
                <label asp-for="MainImageUrl"></label>
                <span asp-validation-for="MainImageUrl" class="text-danger"></span>
            </div>
            
            <hr/>
            <h5>Journey of Creation</h5>

            <div class="form-floating mb-3">
                <textarea asp-for="StoryDetailsText" class="form-control" rows="5"></textarea>
                <label asp-for="StoryDetailsText"></label>
                <span asp-validation-for="StoryDetailsText" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="ProcessImageUrl1" class="form-control" />
                <label asp-for="ProcessImageUrl1"></label>
                <span asp-validation-for="ProcessImageUrl1" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="ProcessImageUrl2" class="form-control" />
                <label asp-for="ProcessImageUrl2"></label>
                <span asp-validation-for="ProcessImageUrl2" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" asp-for="IsActive" />
                <label class="form-check-label" asp-for="IsActive"></label>
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}