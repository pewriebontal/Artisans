
@model IEnumerable<Artisans.Core.Entities.Order>
@{
    ViewData["Title"] = "My Orders";
}

<h1>@ViewData["Title"]</h1>

@if (!Model.Any())
{
    <p>You have not placed any orders yet.</p>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Date</th>
                <th class="text-end">Total</th>
                <th>Status</th>
                <th>Shipping Address</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.OrderDate.ToString("g")</td>
                    <td class="text-end">@order.TotalAmount.ToString("C")</td>
                    <td>@order.Status.ToString()</td>
                    <td>@order.ShippingAddress, @order.ShippingCity</td>
                    <td>
                        <a asp-action="OrderConfirmation" asp-route-id="@order.Id" class="btn btn-sm btn-outline-info">View Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}