@* Features/Orders/Views/Cart.cshtml *@
@model Artisans.Features.Orders.ViewModels.CheckoutViewModel 
@{
    ViewData["Title"] = "Your Shopping Cart";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (!Model.CartItems.Any())
{
    <p class="lead">Your cart is currently empty.</p>
    <p><a asp-controller="Browse" asp-action="Products" class="btn btn-primary">Continue Shopping</a></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Item</th>
                <th class="text-end">Price</th>
                <th class="text-center">Quantity</th>
                <th class="text-end">Subtotal</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CartItems)
            {
                <tr>
                    <td>
                        @if(!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@item.ImageUrl" alt="@item.Name" style="width: 60px; height: auto;"/>
                        }
                        else
                        {
                            <img src="https://via.placeholder.com/60.png?text=N/A" alt="No Image" style="width: 60px; height: auto;" />
                        }
                    </td>
                    <td>
                        @item.Name <br />
                        <small class="text-muted">Type: @item.ItemType</small>
                    </td>
                    <td class="text-end">@item.UnitPrice.ToString("C")</td>
                    <td class="text-center">
                        <form asp-action="UpdateCartQuantity" method="post" class="d-inline-flex align-items-center">
                            <input type="hidden" name="itemId" value="@item.ItemId" />
                            <input type="hidden" name="itemType" value="@item.ItemType" />
                            <input type="number" name="quantity" value="@item.Quantity" class="form-control form-control-sm" style="width: 70px;" min="1" />
                            <button type="submit" class="btn btn-sm btn-outline-secondary ms-1">Update</button>
                        </form>
                    </td>
                    <td class="text-end">@item.TotalPrice.ToString("C")</td>
                    <td>
                        <form asp-action="RemoveFromCart" method="post">
                            <input type="hidden" name="itemId" value="@item.ItemId" />
                            <input type="hidden" name="itemType" value="@item.ItemType" />
                            <button type="submit" class="btn btn-sm btn-outline-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="4" class="text-end"><strong>Total:</strong></td>
                <td class="text-end"><strong>@Model.CartTotal.ToString("C")</strong></td>
                <td></td>
            </tr>
        </tfoot>
    </table>
    <div class="text-end">
        <a asp-controller="Browse" asp-action="Products" class="btn btn-outline-secondary">Continue Shopping</a>
        <a asp-action="Checkout" class="btn btn-primary">Proceed to Checkout</a>
    </div>
}