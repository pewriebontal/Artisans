@* Features/InfluencerFeed/Views/InfluencerPost/Create.cshtml *@
@model Artisans.Features.InfluencerFeed.ViewModels.CreatePostViewModel
@{
    ViewData["Title"] = "Create New Showcase Post";
}

<h2>@ViewData["Title"]</h2>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-floating mb-3">
                <input asp-for="ImageUrl" class="form-control" />
                <label asp-for="ImageUrl"></label>
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <textarea asp-for="Caption" class="form-control" rows="3"></textarea>
                <label asp-for="Caption"></label>
                <span asp-validation-for="Caption" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <select asp-for="TaggedArtisanProfileId1" class="form-select" asp-items="ViewBag.AvailableArtisanProfiles">
                    <option value="">-- Tag an Artisan (Optional) --</option>
                </select>
                <label asp-for="TaggedArtisanProfileId1"></label>
            </div>
            
            <div class="form-floating mb-3">
                <select asp-for="TaggedArtisanProfileId2" class="form-select" asp-items="ViewBag.AvailableArtisanProfiles">
                    <option value="">-- Tag another Artisan (Optional) --</option>
                </select>
                <label asp-for="TaggedArtisanProfileId2"></label>
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Submit Post for Approval</button>
                <a asp-action="MyPosts" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}