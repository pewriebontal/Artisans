@* Features/Browse/Views/MaterialDetails.cshtml *@
@model Artisans.Core.Entities.Material
@{
    ViewData["Title"] = Model.Name;
}

<h1>@Html.DisplayFor(model => model.Name)</h1>
<p class="text-muted">By <a asp-action="ArtisanStore" asp-route-id="@Model.SupplierArtisanProfileId">@Model.SupplierArtisanProfile.BrandName</a>
    @if(Model.Category != null) { <span>in <a asp-action="Materials" asp-route-categoryId="@Model.CategoryId">@Model.Category.Name</a></span> }
</p>

<hr />
<div class="row">
    <div class="col-md-7">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded mb-3" />
        }
        else
        {
            <img src="https://via.placeholder.com/600x400.png?text=No+Image" class="img-fluid rounded mb-3" alt="No Image Available" />
        }
    </div>
    <div class="col-md-5">
        <h4>Details</h4>
        <p>@Html.Raw(Model.Description?.Replace("\n", "<br />"))</p>
        <h3 class="text-primary my-3">@Model.PricePerUnit.ToString("C") per @Model.UnitOfMeasure</h3>
        <p>Stock: @Model.StockQuantity</p>
        @* Add to Cart Button Here Later *@
        <a asp-action="Materials" class="btn btn-outline-secondary mt-3">Back to Materials</a>
    </div>
</div>