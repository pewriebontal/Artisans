@model Artisans.Features.Account.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="UserName" class="form-control" />
                <label asp-for="UserName"></label>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" />
                <label asp-for="Email"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Password" class="form-control" />
                <label asp-for="Password"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="ConfirmPassword" class="form-control" />
                <label asp-for="ConfirmPassword"></label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <select asp-for="Role" asp-items="Html.GetEnumSelectList<Artisans.Core.Enums.UserRoleType>()"
                    class="form-control">
                    <option value="">-- Select Role --</option>
                </select>
                <label asp-for="Role"></label>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>

            @* Fields for Artisan registration - show conditionally with JavaScript if desired, or always visible *@
            <div id="artisanFields" style="display: none;"> @* Initially hidden, show with JS if Role == Artisan *@
                <hr />
                <h5>Artisan Details (if applicable)</h5>
                <div class="form-floating mb-3">
                    <input asp-for="BrandName" class="form-control" />
                    <label asp-for="BrandName"></label>
                    <span asp-validation-for="BrandName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <textarea asp-for="Bio" class="form-control" rows="3"></textarea>
                    <label asp-for="Bio"></label>
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>
            </div>

            <button type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript">
        $(document).ready(function () {
            $('#Role').change(function () {
                if ($(this).val() == '@((int)Artisans.Core.Enums.UserRoleType.Artisan)') { // Compare with integer value of enum
                    $('#artisanFields').show();
                } else {
                    $('#artisanFields').hide();
                    $('#BrandName').val(''); // Clear fields if role changes
                    $('#Bio').val('');
                }
            }).trigger('change'); // Trigger on load in case of validation failure and page reload
        });
    </script>
}